{
  "manifest_version": 3,
  "name": "Data Download Duplication Alert",
  "version": "1.0",
  "description": "Monitors file downloads and detects duplicate download attempts.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "permissions": ["downloads", "storage", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
