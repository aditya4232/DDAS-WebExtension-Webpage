{
  "manifest_version": 3,
  "name": "Advanced Download Detector",
  "version": "1.1",
  "description": "Detects downloads and shows a popup for multiple files with the same name or many downloads.",
  "permissions": [
    "downloads",
    "notifications",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon.png"
  },
  "icons": {
    "48": "images/icon.png"
  }
}
